
<%- include('Header.ejs'); %>
<body id="body" class="d-flex flex-column min-vh-100" style="background-image: url('../Images/danielle-cerullo-CQfNt66ttZM-unsplash.jpg');/* height: 100%; */background-size: cover;background-repeat: no-repeat;background-attachment: fixed;background-position-y: center;background-position-x: center;"></body>
  <%- include('Navegacion.ejs', {ventana:"SERVICIOS", tipo_usuario:"Administrador"}); %>
  <div class="card mx-auto background cardLista mb-2">
    <div class="card-body" id="cardB">
      <div class="row justify-content-between">
        <div class="col-6">
          <h1 class="card-title tituloLista">Servicios</h1>
        </div>
        <div class="d-grid col-2">
          <button type="button" class="btn btn-primary activaModal" value="CREAR" data-bs-toggle="modal" data-bs-target="#modalServicio">Crear</button>
        </div>
      </div>
    </div>
  </div>
  <div id="servicios">

  </div>
  <div class="modal fade" id="modalServicio" tabindex="-1" aria-labelledby="crearEditar" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content background">
        <div class="modal-body d-grid gap-4">
          <h3 class="text-center" id="crearEditar">Crear servicio</h3>
          <form class="d-grid col-9 mx-auto gap-2 needs-validation" novalidate id="formServicio">
            <div>
              <label for="nombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="nombre" name="nombre" aria-describedby="NombreDeServicio" required>
              <div class="invalid-feedback">
                El campo no puede estar vacío.
              </div>
            </div>
            <div>
              <label for="costo" class="form-label">Costo</label>
              <input type="text" class="form-control" id="costo" name="costo" aria-describedby="costo">
              <div class="invalid-feedback">
                El campo no puede estar vacío.
              </div>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" checked id="costoServicio">
              <label class="form-check-label" for="costoServicio">
                Costo de acuerdo a la sala
              </label>
            </div>
            <div class="row justify-content-end">
              <div class="col-3">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
              </div>
              <div class="col-3">
                <button type="submit" class="btn btn-primary" form="formServicio">Enviar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include('Mensaje.ejs'); %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="../Utilidades.js"></script>
  <script src="../Js/Mensaje.js"></script>
  <script src="../Servicios.js"></script>
  <script src="../Js/Servicios.js"></script>
</body>
</html>