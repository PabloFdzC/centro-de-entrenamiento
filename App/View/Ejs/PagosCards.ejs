<% if(lista.length == 0) { %>
  <div class="card mx-auto background cardLista mt-2">
    <div class="card-body" id="cardB">
      <div class="row">
        <div class="col-12">
          <h2 class="card-title tituloElementoLista text-center">Nada para mostrar</h2>
        </div>
      </div>
    </div>
  </div>
<% } %>
<% for(let pago of lista){ %>
  <div class="card mx-auto background cardLista mt-2">
    <div class="card-body" id="cardB">
      <div class="row justify-content-between">
        <div class="col-8">
          <% let clase = pago.getClase(); %>
          <h2 class="card-title tituloElementoLista2"><%= clase.getServicio().getNombre() %></h2>
        </div>
        <div class="col-2">
          <div class="">
            <button type="button" class="btn btn-primary activaPago" value="<%= pago.getId() %>" data-bs-toggle="modal" data-bs-target="#modalPagar">Pagar</button>
          </div>
        </div>
      </div>
      <div class="row p-3">
        <div class="col-6">
          <div class="d-flex justify-content-start">
            <h3 class="tituloDatos ">Monto:</h3>
            <div class="ms-2"><%= pago.getCantidad() %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } %>