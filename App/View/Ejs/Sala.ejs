
<%- include('Header.ejs'); %>
<body id="body" class="d-flex flex-column min-vh-100" style="background-image: url('../Images/humphrey-muleba-dDp-6pXrYik-unsplash.jpg');/* height: 100%; */background-size: cover;background-repeat: no-repeat;background-attachment: fixed;background-position-y: center;background-position-x: center;"></body>
  <%- include('Navegacion.ejs', {ventana:"SALA"}); %>
  <div class="card mx-auto background cardLista mb-2">
    <div class="card-body" id="cardB">
      <div class="row justify-content-between">
        <div class="col-6">
          <h1 class="card-title tituloLista">Sala</h1>
        </div>
        <div class="d-grid col-2">
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCrearSala">Crear</button>
        </div>
      </div>
    </div>
  </div>
  <div id="sala">

  </div>
  <div class="modal fade" id="modalCrearSala" tabindex="-1" aria-labelledby="crearSalaModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content background">
        <div class="modal-body d-grid gap-4">
          <h3 class="text-center" id="crearSalaModal">Crear sala</h3>
          <div class="d-grid col-9 mx-auto gap-2">
            <div>
              <label for="Capacidad" class="form-label">Capacidad</label>
              <input type="text" class="form-control" id="Capacidad" aria-describedby="CapacidadSala">
            </div>
            <div>
              <label for="Aforo" class="form-label">Aforo</label>
              <input type="text" class="form-control" id="Aforo" aria-describedby="AforoSala">
            </div>
            <div>
              <label for="Costo" class="form-label">Costo</label>
              <input type="text" class="form-control" id="Costo" aria-describedby="CostoSala">
            </div>
            <div id="listaDiasCalendario">
              <div class="row">
                <div class="col-9">
                  <label for="AñadirDíaCalendario" class="form-label">Añadir día de calendario:</label>
                </div>
                <div class="col-2">
                  <button type="button" class="btn btn-secondary" aria-describedby="AñadirDíaCalendario" data-bs-toggle="modal" data-bs-target="#modalCrearCalendario">Añadir</button>
                </div>
              </div>
            </div>
            <div class="row justify-content-end">
              <div class="col-3">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
              </div>
              <div class="col-3">
                <button type="submit" class="btn btn-primary">Enviar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="modalCrearCalendario" tabindex="-1" aria-labelledby="crearCalendarioModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content background">
        <div class="modal-body d-grid gap-4">
          <h4 class="text-center" id="crearCalendarioModal">Crear calendario</h4>
          <div class="d-grid col-9 mx-auto gap-2">
            <div>
              <label for="Dia" class="form-label">Día</label>
              <input type="date" class="form-control" id="Dia" aria-describedby="Dia">
            </div>
            <div class="row">
              <div class="d-grid col-6">
                <label for="HoraInicio" class="form-label">Hora inicio</label>
                <select name="HoraInicio" id="HoraInicio" class="form-control" aria-describedby="HoraInicio" required>
                  <option value="" disabled selected hidden>Hora inicio</option>
                  <% for(let i = 1; i <= 23; i++) { %>
                    <% for(let j = 0; j < 59; j+=5) { %>
                      <% if(j < 10) { %>
                        <option value="<%=i%>:<%=j%>"><%=i%>:0<%=j%></option>
                      <% } else { %>
                        <option value="<%=i%>:<%=j%>"><%=i%>:<%=j%></option>
                      <% } %>    
                    <% } %>
                  <% } %>
                </select>
              </div>
              <div class="d-grid col-6">
                <label for="HoraFinal" class="form-label">Hora inicio</label>
                <select name="HoraFinal" id="HoraFinal" class="form-control" aria-describedby="HoraFinal" required>
                  <option value="" disabled selected hidden>Hora final</option>
                  <% for(let i = 1; i <= 23; i++) { %>
                    <% for(let j = 0; j < 59; j+=5) { %>
                      <% if(j < 10) { %>
                        <option value="<%=i%>:<%=j%>"><%=i%>:0<%=j%></option>
                      <% } else { %>
                        <option value="<%=i%>:<%=j%>"><%=i%>:<%=j%></option>
                      <% } %>    
                    <% } %>
                  <% } %>
                </select>
              </div>
            </div>
            <div>
              <label for="Repeticion" class="form-label">Repetición</label>
              <select name="Repeticion" id="Repeticion" class="form-control" aria-describedby="Repeticion">
                <option value="" disabled selected hidden>Repeticion</option>
                <option value="CADASEMANADELMES">Cada semana del mes</option>
                <option value="TODOSLOSDIASDELMES">Todos los días del mes</option>
                <option value="NOSEREPITE">No se repite</option>
              </select>
            </div>
            <div class="row justify-content-end">
              <div class="col-3">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
              </div>
              <div class="col-3">
                <button type="submit" class="btn btn-primary">Enviar</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="../Js/Interfaz.js"></script>
</body>
</html>